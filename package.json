{
  "name": "zotero-llms",
  "version": "0.0.0",
  "description": "Zotero LLMs Plugin",
  "config": {
    "addonName": "Zotero LLMs Plugin",
    "addonID": "neverbiasu@gmail.com",
    "addonRef": "zotero-llms",
    "addonInstance": "zotero-llms",
    "prefsPrefix": "extensions.zotero.${addonRef}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/windingwind/zotero-plugin-template.git"
  },
  "author": "windingwind",
  "bugs": {
    "url": "https://github.com/windingwind/zotero-plugin-template/issues"
  },
  "homepage": "https://github.com/windingwind/zotero-plugin-template#readme",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "tsc --noEmit && zotero-plugin build",
    "lint": "prettier --write . && eslint . --fix",
    "release": "zotero-plugin release",
    "test": "echo \"Error: no test specified\" && exit 1",
    "update-deps": "npm update --save"
  },
  "dependencies": {
    "zotero-plugin-toolkit": "^2.3.37"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@types/node": "^20.12.12",
    "eslint": "^9.7.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0-alpha.20",
    "zotero-plugin-scaffold": "^0.0.26",
    "zotero-types": "^2.1.0"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  }
}
